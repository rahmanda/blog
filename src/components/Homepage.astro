---
import BaseLayout from "src/layouts/Base.astro";
import Footer from "./Footer.astro";
import { t, SOCIAL_MEDIA } from "src/config";

interface Item {
  title: string;
  summary: string;
  link: string;
}

interface Props {
  headline: string;
  summary: string;
  subheadline: string;
  projects: Item[];
  articles: Item[];
  locale: "en" | "id";
}

const { headline, summary, subheadline, projects, articles, locale } =
  Astro.props;

const navs = [
  {
    name: "Blog",
    link: "/en/blog/",
    primary: false,
    external: false,
  },
  {
    name: "Ayo Ngulik!",
    link: "/en/notes",
    primary: false,
    external: true,
  },
  {
    name: t[locale].contact,
    link: "/en/contact/",
    primary: true,
    external: false,
  },
];

const webtitle = "Rahmanda Wibowo.";
const blogLink = `/${locale}/blog`;
---

<BaseLayout frontmatter={{ title: headline, summary, locale }}>
  <header class="border-b-2 border-gray-300 sticky top-0 bg-gray-100">
    <nav class="max-w-screen-lg mx-auto p-4 flex items-center">
      <div class="flex-1">
        <span class="font-sans-title text-md sm:text-lg tracking-tighter"
          >{webtitle}</span
        >
      </div>
      <ul class="flex-none flex gap-6 text-sm sm:text-md">
        {
          navs.map((nav) => (
            <li>
              {nav.primary ? (
                <a
                  class="px-2 py-1 rounded bg-gray-900 text-white font-sans-title"
                  href={nav.link}
                >
                  {nav.name}
                </a>
              ) : (
                <a class="hidden sm:flex gap-1 hover:underline" href={nav.link}>
                  {nav.name}
                  {nav.external && (
                    <svg
                      class="w-4"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="feather feather-arrow-up-right"
                    >
                      <line x1="7" y1="17" x2="17" y2="7" />
                      <polyline points="7 7 17 7 17 17" />
                    </svg>
                  )}
                </a>
              )}
            </li>
          ))
        }
      </ul>
    </nav>
  </header>
  <main class="max-w-screen-lg mx-auto px-4">
    <section class="mt-16 sm:mt-24 mb-12 sm:mb-16">
      <header class="mb-12">
        <h1 class="font-sans-title text-4xl sm:text-6xl" lang="en">
          {headline}
        </h1>
      </header>

      <p class="text-lg sm:text-xl">
        {subheadline}
      </p>
    </section>

    <section class="mb-14">
      <h2 class="font-sans-title text-2xl sm:text-4xl my-4 sm:my-6">
        Projects.
      </h2>
      <p class="sm:text-lg mb-6" set:html={t[locale].project_description} />
      <ul class="grid grid-cols-1 sm:grid-cols-3 auto-rows-max gap-8">
        {
          projects.map((project) => (
            <li>
              <article class="border-2 border-gray-300 p-4 sm:p-6 rounded-lg h-full">
                <a
                  href={project.link}
                  target="_blank"
                  class="flex gap-1 mb-2 sm:mb-3 hover:underline"
                >
                  <h3 class="text-lg sm:text-xl font-sans-title">
                    {project.title}
                  </h3>
                  <svg
                    class="w-4"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="feather feather-arrow-up-right"
                  >
                    <line x1="7" y1="17" x2="17" y2="7" />
                    <polyline points="7 7 17 7 17 17" />
                  </svg>
                </a>
                <p class="text-pretty">{project.summary}</p>
              </article>
            </li>
          ))
        }
      </ul>
    </section>

    <section class="mb-14">
      <h2 class="font-sans-title text-2xl md:text-4xl my-6">
        {t[locale].featured_articles}.
      </h2>
      <p class="sm:text-lg mb-6" set:html={t[locale].articles_description} />
      <ul class="grid grid-cols-1 sm:grid-cols-2 auto-rows-fr gap-8 mb-6">
        {
          articles.map((article) => (
            <li>
              <article class="border-2 border-gray-300 p-4 sm:p-6 rounded-lg h-full">
                <a class="hover:underline" href={article.link}>
                  <h3 class="text-lg sm:text-xl font-sans-title mb-2 sm:mb-3">
                    {article.title}
                  </h3>
                </a>
                <p>{article.summary}</p>
              </article>
            </li>
          ))
        }
      </ul>
      <div>
        <a
          href={blogLink}
          class="inline-flex items-center gap-1 font-sans-title border-2 border-gray-900 sm:text-lg py-2 px-3 rounded"
          >{t[locale].visit_blog}
          <svg
            class="w-4"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="feather feather-arrow-right"
            ><line x1="5" y1="12" x2="19" y2="12"></line><polyline
              points="12 5 19 12 12 19"></polyline></svg
          ></a
        >
      </div>
    </section>

    <section class="mb-14">
      <h2 class="font-sans-title text-2xl sm:text-4xl my-6">
        {t[locale].lets_connect}
      </h2>
      <p class="sm:text-lg mb-6" set:html={t[locale].contact_description} />
    </section>
  </main>

  <Footer locale="en" />
</BaseLayout>
