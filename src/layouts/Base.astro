---
import Meta from "src/components/Meta.astro";
import GlobalStyles from "src/components/GlobalStyles.astro";
import { SITE_TITLE } from "src/config";

const { frontmatter } = Astro.props;

function getTitle(title: string) {
  if (title) {
    return `${title} | ${SITE_TITLE}`;
  }
  return SITE_TITLE;
}

const title = getTitle(frontmatter?.title);
---

<html lang={frontmatter?.locale ?? "id"}>
  <head>
    <Meta title={title} description={frontmatter?.summary} />
    <slot name="head" />
    <GlobalStyles />
  </head>
  <body class="bg-gray-100 relative font-sans text-gray-900">
    <slot />
    <script src="../scripts/button-menu.ts"></script>
  </body>
</html>
